# FastAPI Backend Dockerfile for Local LLM Research Agent
# Phase 2.1: Backend Infrastructure & RAG Pipeline

FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
# Includes OpenGL/rendering libraries required by Docling for PDF processing
RUN apt-get update && apt-get install -y \
    curl \
    gcc \
    g++ \
    unixodbc-dev \
    gnupg2 \
    lsb-release \
    # OpenGL and rendering libraries for Docling/OpenCV (Debian Trixie+)
    libgl1 \
    libglib2.0-0 \
    libsm6 \
    libxext6 \
    libxrender1 \
    libfontconfig1 \
    # PDF rendering support
    poppler-utils \
    && rm -rf /var/lib/apt/lists/*

# Install Microsoft ODBC Driver 18 for SQL Server (Debian 12 Bookworm compatible)
RUN curl -fsSL https://packages.microsoft.com/keys/microsoft.asc | gpg --dearmor -o /usr/share/keyrings/microsoft-prod.gpg \
    && echo "deb [signed-by=/usr/share/keyrings/microsoft-prod.gpg] https://packages.microsoft.com/debian/12/prod bookworm main" > /etc/apt/sources.list.d/mssql-release.list \
    && apt-get update \
    && ACCEPT_EULA=Y apt-get install -y msodbcsql18 \
    && rm -rf /var/lib/apt/lists/*

# Install uv for fast package management
RUN curl -LsSf https://astral.sh/uv/install.sh | sh
ENV PATH="/root/.local/bin:$PATH"

# Copy project files
COPY pyproject.toml ./
COPY uv.lock* ./
COPY README.md ./
COPY src/ src/

# Install dependencies
# No longer using Docling/HuggingFace - using pypdf and python-docx instead
ENV UV_HTTP_TIMEOUT=300

RUN uv pip install --system -e .

# Pin bcrypt to compatible version for passlib (bcrypt 5.x breaks passlib)
RUN uv pip install --system "bcrypt>=4.0.0,<5.0.0"

# Install EasyOCR for Docling PDF text extraction
RUN uv pip install --system easyocr

# Install Python-based MSSQL MCP Server (supports SQL Server authentication)
# This replaces the Node.js Azure-Samples version which only supports Azure AD
RUN uv pip install --system microsoft_sql_server_mcp

# Set MCP_MSSQL_PATH to use the Python MCP server module
# The mssql_config.py will detect this and use python -m mssql_mcp_server
ENV MCP_MSSQL_PATH=python-mcp

# Create data directories
RUN mkdir -p /app/data/uploads /app/data/models

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/api/health/live || exit 1

# Run FastAPI with uvicorn (directly since deps are installed system-wide)
CMD ["python", "-m", "uvicorn", "src.api.main:app", "--host", "0.0.0.0", "--port", "8000"]
