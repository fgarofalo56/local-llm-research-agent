# Custom Apache Superset Image with SQL Server Support
# Phase 3: Enterprise BI Platform Integration
#
# This adds the Microsoft SQL Server ODBC driver and pymssql to the base Superset image

FROM apache/superset:3.1.0

USER root

# Install dependencies for MS SQL Server connectivity
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        gnupg \
        curl \
        apt-transport-https \
    && curl https://packages.microsoft.com/keys/microsoft.asc | apt-key add - \
    && curl https://packages.microsoft.com/config/debian/11/prod.list > /etc/apt/sources.list.d/mssql-release.list \
    && apt-get update \
    && ACCEPT_EULA=Y apt-get install -y --no-install-recommends \
        msodbcsql18 \
        unixodbc-dev \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Install Python SQL Server drivers (both pyodbc and pymssql) and requests for setup script
RUN pip install --no-cache-dir pyodbc pymssql requests

# Copy database setup scripts
COPY superset/setup_databases.py /app/setup_databases.py
COPY superset/create_examples.py /app/create_examples.py
RUN chmod +x /app/setup_databases.py /app/create_examples.py

USER superset
